<link rel="stylesheet" href="/login.css">
{{#if sessionFlash.message}}
              <div class="{{sessionFlash.type}}" >
                  {{sessionFlash.message}}
              </div>
            {{/if}}
<div class="container">
    
        <form action="/users/login" method="post">

            <div class="title">Giriş</div>

            <div class="input-box">
                <input type="email" name="email" placeholder="Email Giriniz." required>
                <div class="underline"></div>
            </div>

            <div class="input-box">
                <input type="password" name="password"placeholder="Şifrenizi Giriniz." required>
                <div class="underline"></div>
            </div>

            <div class="input-box button">
                <input type="submit" value="Giriş Yap">
            </div>
            

      
        

        <div class="text">Sosyal Medya İle Giriş</div>

        <!--Sosyal Medya Butonları-->

        <div class="twitter">
            <a href="https://twitter.com/?lang=tr"><i class="fab fa-twitter"></i>Twitter ile Giriş</a>
        </div>

        <div class="facebook">
            <a href="https://tr-tr.facebook.com/"><i class="fab fa-facebook"></i>Facebook ile Giriş</a>
        </div>
    </div>